@model IEnumerable<InfnetTecCsharpCrud.Models.Pedido>

@{
    ViewBag.Title = "Index";
}

<h2>Pedidos</h2>

<p>
    @Html.ActionLink("Criar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Cliente
        </th>
        <th>
            Fornecedor
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataPedido)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Comprador.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vendedor.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataPedido)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CodigoPedido }) |
            @Html.ActionLink("Exibir", "Details", new { id=item.CodigoPedido }) |
